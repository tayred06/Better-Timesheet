{
  "manifest_version": 3,
  "name": "Better Timesheet",
  "version": "1.0",
  "description": "Suivez le temps pass√© sur vos projets et sites web.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "sidePanel",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Time Tracker",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}